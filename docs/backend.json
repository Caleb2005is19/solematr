{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["name", "email"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who placed the order."
        },
        "customerInfo": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "postalCode": { "type": "string" },
            "country": { "type": "string" }
          },
          "required": ["name", "email", "address", "city", "postalCode", "country"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "shoeId": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "size": { "type": "number" },
              "quantity": { "type": "number" },
              "imageUrl": { "type": "string" }
            },
            "required": ["shoeId", "name", "price", "size", "quantity"]
          }
        },
        "totalPrice": {
          "type": "number"
        },
        "paymentMethod": {
          "type": "string",
          "enum": ["card", "mpesa"]
        },
        "status": {
          "type": "string",
          "enum": ["unfulfilled", "fulfilled", "shipped", "cancelled"],
          "description": "The current status of the order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "customerInfo", "items", "totalPrice", "paymentMethod", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/orders": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "A collection of all customer orders."
    }
  }
}