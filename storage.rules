rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access on all files. Users need to be able to see
    // product images in the store.
    match /{allPaths=**} {
      allow get: if true;
    }

    // Allow writes (uploads, updates, deletes) on product images only for
    // authenticated users who have the 'admin' custom claim. This secures
    // your product catalog from unauthorized changes.
    match /product-images/{imageId} {
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
