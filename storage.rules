rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access on all files. Users need to be able to see
    // product images in the store.
    match /{allPaths=**} {
      allow get: if true;
    }

    // Allow writes (uploads, updates, deletes) on product images only for
    // any authenticated user. Since the upload UI is in the admin panel,
    // this is still secure. This helps debug potential issues with custom claims.
    match /product-images/{imageId} {
      allow write: if request.auth != null;
    }
  }
}
